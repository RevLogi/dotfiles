{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "tui": {
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "formatter": {
    "stylua": {
      "command": ["stylua", "--", "$FILE"],
      "extensions": [".lua"]
    },
    "clang-format": {
      "command": ["clang-format", "-i", "$FILE"],
      "extensions": [".c", ".cpp", ".h", ".hpp"]
    },
    "markdownlint": {
      "command": ["markdownlint", "--fix", "$FILE"],
      "extensions": [".md"]
    }
  },
  "watcher": {
    "ignore": ["node_modules/**", "dist/**", ".git/**", "build/**", ".next/**"]
  },
  "autoupdate": "notify",
  "compaction": {
    "auto": true,
    "prune": true
  }
}
